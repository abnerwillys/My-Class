{% extends "layout.njk" %}

{% block head %}
  <title>My Class | Edit teacher</title>
{% endblock %}

{% block content %}
  <div class="card">
    <section 
      class="avatar"
      style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
    </section>
    <section class="details">
      <form action="/teachers?_method=PUT" method="POST">
        <h3>Edit Teacher</h3>
        
        {% include './fields.njk' %}

        <input 
          type="hidden" 
          name="id" 
          value="{{ teacher.id }}"
        >

      </form>
    </section>
  </div>
{% endblock content %}